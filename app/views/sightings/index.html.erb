<p id="notice"><%= notice %></p>

<h1>Sightings</h1>

<table id="sighting_list">
  <thead>
    <tr>
      <th>Date</th>
      <th>Time</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Animal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sightings.each do |sighting| %>
      <tr>
        <td><%= sighting.date.strftime("%m/%d/%Y") %></td>
        <td><%= sighting.time.strftime("%I:%M%P") %></td>
        <td><%= sighting.latitude %></td>
        <td><%= sighting.longitude %></td>
        <td><%= sighting.animal.common_name %></td>
        <td><%= link_to 'Show', sighting %></td>
        <td><%= link_to 'Edit', edit_sighting_path(sighting) %></td>
        <td><%= link_to 'Destroy', sighting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Home', root_path %> | <%= link_to 'Sightings Calendar', calendar_path %> | <%= link_to 'Add New Sighting', new_sighting_path %>

<hr>

<h3>Add an Animal Sighting with AJAX</h3>
<p>
  <!-- Input area for new sighting -->
  <div class="field">
    <label for="date">Date</label>
    <input type="date" name="sighting[date]" id="date" />
  </div>
  <div class="field">
    <label for="time">Time</label>
    <input type="time" name="sighting[time]" id="time" />
  </div>
  <div class="field">
    <label for="latitude">Latitude</label>
    <input type="number" name="sighting[latitude]" id="latitude" />
  </div>
  <div class="field">
    <label for="longitude">Longitude</label>
    <input type="number" name="sighting[longitude]" id="longitude" />
  </div>
  <div class="field">
    <label for="Animal">Animal</label>
    <input type="number" name="sighting[animal_id]" id="animal_id" />
  </div>

  <button id="add_new_sighting_button">Create New Sighting</button>
</p>
